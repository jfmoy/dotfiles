#!/usr/bin/env sh

# ================================================================
# Focus Window
# ================================================================

# Focus window in direction
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# Focus next/previous window
alt - n : yabai -m window --focus next || yabai -m window --focus first
alt - p : yabai -m window --focus prev || yabai -m window --focus last

# ================================================================
# Move Window
# ================================================================

# Swap windows in direction
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# Move window and split
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - l : yabai -m window --warp east

# ================================================================
# Resize Window
# ================================================================

# Increase window size
shift + cmd - h : yabai -m window --resize left:-40:0 || yabai -m window --resize right:-40:0
shift + cmd - j : yabai -m window --resize bottom:0:40 || yabai -m window --resize top:0:40
shift + cmd - k : yabai -m window --resize top:0:-40 || yabai -m window --resize bottom:0:-40
shift + cmd - l : yabai -m window --resize right:40:0 || yabai -m window --resize left:40:0

# Equalize size of windows
shift + alt - 0 : yabai -m space --balance

# ================================================================
# Window Manipulation
# ================================================================

# Toggle window float
shift + alt - space : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Toggle window fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# Toggle window native fullscreen
shift + alt - f : yabai -m window --toggle native-fullscreen

# Toggle window split type
alt - e : yabai -m window --toggle split

# Rotate tree
alt - r : yabai -m space --rotate 90

# Mirror tree y-axis
alt - y : yabai -m space --mirror y-axis

# Mirror tree x-axis
alt - x : yabai -m space --mirror x-axis

# ================================================================
# Space Navigation
# ================================================================

# Focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Move window to space
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8
shift + alt - 9 : yabai -m window --space 9

# Focus recent space
alt - tab : yabai -m space --focus recent

# ================================================================
# Layout Management
# ================================================================

# Toggle layout (bsp/float/stack)
ctrl + alt - space : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" elif .type == "float" then "stack" else "bsp" end')"

# Toggle bsp/float
ctrl + alt - b : yabai -m space --layout bsp
ctrl + alt - f : yabai -m space --layout float
ctrl + alt - s : yabai -m space --layout stack

# ================================================================
# Service Management
# ================================================================

# Restart yabai
ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

# Stop/start/restart yabai
ctrl + alt + cmd - q : brew services stop yabai
ctrl + alt + cmd - s : brew services start yabai
