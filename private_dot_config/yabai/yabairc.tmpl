#!/usr/bin/env sh

# Load scripting addition (required for some features)
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# Global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_origin_display        default
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                on
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config window_border                off
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# Layout settings
yabai -m config layout                       bsp
yabai -m config top_padding                  4
yabai -m config bottom_padding               4
yabai -m config left_padding                 4
yabai -m config right_padding                4
yabai -m config window_gap                   4

# Floating window rules for common applications
# System applications
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^Dictionary$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off

# Password manager
yabai -m rule --add app="^1Password$" manage=off

# Utility applications
yabai -m rule --add app="^AppCleaner$" manage=off
yabai -m rule --add app="^Archive Utility$" manage=off
yabai -m rule --add app="^Keka$" manage=off
yabai -m rule --add app="^The Unarchiver$" manage=off

# Learning applications (Anki - better as floating for flashcard review)
yabai -m rule --add app="^Anki$" manage=off

# IDE/Editor preferences and settings
yabai -m rule --add app="^PyCharm$" title="^(Preferences|Settings)$" manage=off
yabai -m rule --add app="^Visual Studio Code$" title="^(Settings)$" manage=off
yabai -m rule --add app="^Cursor$" title="^(Settings)$" manage=off

# Media applications
yabai -m rule --add app="^VLC$" manage=off
yabai -m rule --add app="^GIMP" manage=off
yabai -m rule --add app="^Qobuz$" manage=off

# Communication applications
yabai -m rule --add app="^Signal$" manage=off
yabai -m rule --add app="^Slack$" manage=off
yabai -m rule --add app="^Discord$" manage=off

# Productivity tools
yabai -m rule --add app="^Raycast$" manage=off

# Finder - float all windows at native size
yabai -m rule --add app="^Finder$" manage=off

# Installers and preferences
yabai -m rule --add title="^(Preferences|Settings)$" manage=off
yabai -m rule --add title="^Install" manage=off

# Dialogs and alerts
yabai -m rule --add title="^(Open|Save|Select)" manage=off
yabai -m rule --add app=".*" subrole="^AXDialog$" manage=off
yabai -m rule --add app=".*" subrole="^AXSystemDialog$" manage=off

echo "yabai configuration loaded."
